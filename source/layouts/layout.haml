      %a#logo.left{ :href => '/' }
        %svg#nanobox-logo{ :space => "preserve", :preserveaspectratio => "xMinYMin meet", :version => "1.1", :xmlns => "http://www.w3.org/2000/svg", :viewBox => "0 0 35 35"}
          %g{:xmlns => "http://www.w3.org/2000/svg"}
