            %polygon.st93{:points => "16.823,31.026 4,24.417 4,26.343 16.823,32.954   "}
            %polygon.st155{:points => "16.823,26.425 29.647,19.814 29.647,21.741 16.823,28.353  "}
            %polygon.st93{:points => "16.823,26.425 4,19.814 4,21.741 16.823,28.353   "}
            %polygon.st155{:points => "16.823,21.822 29.647,15.213 29.647,17.14 16.823,23.751   "}
            %polygon.st93{:points => "16.823,21.822 4,15.213 4,17.14 16.823,23.751  "}
            %polygon.st53{:points => "29.647,10.61 16.823,17.22 4,10.61 16.823,4  "}
            %polygon.st155{:points => "16.823,17.22 29.647,10.61 29.647,12.538 16.823,19.149  "}
            %polygon.st93{:points => "16.823,17.22 4,10.61 4,12.538 16.823,19.149   "}
